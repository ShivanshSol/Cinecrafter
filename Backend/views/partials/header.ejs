
    
<header>
    <!-- nav-bar -->
    <nav>
        <!-- nav-left -->
        <section class="nav-left"> 
            <!-- cinecrafter logo -->
            <div class="logo">
                <a href="/home"><img id="header-logo" src="/assets/logo/logo.png" alt="logo" ></a>
            </div>
            <!-- nav menu -->
            <menu id="nav-menu">
                <a href="/movies">Movies</a>
                <a href="/series">Series</a>
                <a href="/shows">Shows</a>
            </menu>
            <i class="fa-solid fa-chevron-down menu-toggle" id="menu-toggle"></i>
        </section>
        <!-- nav-right -->
        <section class="nav-right">
            <!-- search bar -->
            <div class="search-bar">
                <input id="search-input" class="search-input" name="search-input" type="text" placeholder="Search">
                <label id="search-btn" class="search-btn" for="search-input" title="Search"><i class="fa-solid fa-magnifying-glass" for="search-bar"></i></label>
                <button id="clear-search-btn" class="clear-search-btn" title="Clear"><i class="fa-solid fa-xmark"></i></button>
            </div>
            <!-- user icon -->
             <div class="profile-img" id="profile-img">
                <i class="fa-solid fa-circle-user fa-xl" id="user"></i>
             </div>
        </section>
    </nav>
</header>

<!-- search results -->
<div id="search-results-container" class="search-results-container" onclick="toggleSearchResults('search-results')">
    
    <div class="result-container" id="result-container">
        <p id="search-message"></p>
        <div class="result" id="result"></div>
    </div>
</div>

<!-- side menu -->
<div class="side-menu-container" id="side-menu-container" >
    <div class="side-menu" id="side-menu">
        <div class="menu-list">
            <div class="list-item" id="myAccount" onclick="redirectTo('/account.html#myAccount')" >My Account</div>
            <div class="list-item" id="watchList" onclick="redirectTo('/account.html#watchList')" >Watchlists</div>
            <div class="list-item" id="bookmarks" onclick="redirectTo('/account.html#bookmarks')" >Bookmarks</div>
            <div class="list-item" id="Settings" onclick="redirectTo('/account.html#Settings')" >Settings</div>
            <div class="list-item" id="Help" onclick="redirectTo('/account.html#Help')" >Help</div>
        </div>
    </div>
</div>



<script>
    const searchBtn = document.getElementById('search-btn');
    const searchClearBtn = document.getElementById('clear-search-btn');
    const searchInput = document.getElementById('search-input');
    const searchResultsContainer = document.getElementById('search-results-container');
    const resultContainer = document.getElementById('result-container');

    searchInput.addEventListener('input', () => {
        searchClearBtn.style.display = searchInput.value ? 'block' : 'none';
    });


    searchClearBtn.addEventListener('click', () => {
        searchInput.value = '';
        searchClearBtn.style.display = 'none';
        searchResultsContainer.style.display = 'none';
        resultContainer.style.display = 'none';
    });

    const body = document.querySelector('body');
    const profileImg = document.getElementById('profile-img');
    const sideMenuContainer = document.getElementById('side-menu-container');
    const sideMenu = document.getElementById('side-menu');

profileImg.addEventListener('click', (event) => {
    event.stopPropagation(); // Prevents the document click from firing
    sideMenuContainer.style.display = 'block';
});

sideMenu.addEventListener('click', (event) => {
    event.stopPropagation(); // Prevents closing when clicking inside the menu
});

document.addEventListener('click', (event) => {
    // If click is outside the side menu, close it
    if (sideMenuContainer.style.display === 'block') {
        sideMenuContainer.style.display = 'none';
    }
});
</script>

