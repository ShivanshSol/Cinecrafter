<!-- side menu -->
<div class="side-menu-container" id="side-menu-container" >
    <div class="side-menu" id="side-menu">
        <div class="menu-list">
            <div class="list-item" id="myAccount" onclick="redirectTo('/account.html#myAccount')" >My Account</div>
            <div class="list-item" id="watchList" onclick="redirectTo('/account.html#watchList')" >Watchlists</div>
            <div class="list-item" id="bookmarks" onclick="redirectTo('/account.html#bookmarks')" >Bookmarks</div>
            <div class="list-item" id="Settings" onclick="redirectTo('/account.html#Settings')" >Settings</div>
            <div class="list-item" id="Help" onclick="redirectTo('/account.html#Help')" >Help</div>
        </div>
    </div>
</div>

<style>
    .side-menu-container {
        display: none; /* Initially hidden */
        /* display: block; */
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.3);
        z-index: 900;
        transition: 0.3s ease-in-out;
    }

    .side-menu {
        position: absolute;
        top: 80px;
        right: 0;
        background-color: var(--dark-bg-color);
        width: 240px;
        height: auto;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .menu-list {
        padding: 20px;
        display: flex;
        flex-direction: column;
        gap: 24px;
    }

    .list-item {
        color: #f0f0f0;
        position: relative;
        padding: 10px;
        cursor: pointer;
        border-radius: 8px;
    }

    .list-item:hover {
        color: black;
        font-weight: bold;
        background-color: var(--accent-color);
    }
</style>


<script>
    const profileImg = document.getElementById('profile-img');
    const sideMenuContainer = document.getElementById('side-menu-container');

    profileImg.addEventListener('click', () => {
        sideMenuContainer.style.display = 'block';
    });

    sideMenuContainer.addEventListener('click', (event) => {
        if (event.target === sideMenuContainer) {
            sideMenuContainer.style.display = 'none';
        }
    });
</script>